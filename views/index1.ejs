<%include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog</div>
	<div class="ui top fixed segment" >
		<div class="ui divided items" >
			<% blogs.forEach(function(blog){ %>
            <div class="item">
            	<div class="image">
            		<img src="<%= blog.image%>">
            	</div>
            	<div class="content">
            		<a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
            		<div class="meta">
            			<span><%= blog.date.toDateString()%> </span>
            		</div>
            		<div class="description">
            			<p><%- blog.body.substring(0,100)%>...</p>
            		</div>
            		<div class="extras">
            			<a class="ui floated inverted blue button" href="/blogs/<%=blog._id%>">
            				Read More<i class="angle double right icon"></i>
            			</a>
            	    </div>
                </div>
            </div>
    <% }) %>
		</div>
	</div>
</div>





<% include partials/footer %>