	<div class="ui huge header"><%=blog.title%></div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui medium centered rounded image" src="<%=blog.image%>">
			<div class="content">
				<span><%=blog.date.toDateString()%></span>
			</div>
